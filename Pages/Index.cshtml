@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    Layout= null;
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">
    <title>Bem vindo!</title>
</head>
<body>

    <p class="line anim-typewriter">
        Go to the presale... <a href="/Home"><i class="fas fa-forward"></i> <i class="fab fa-apple"></i></a>

    </p>

</body>
</html>
<style>
    html {
        min-height: 100%;
        overflow: hidden;
    }

    body {
        height: calc(100vh - 8em);
        padding: 4em;
        color: rgba(255, 255, 255, 0.75);
        font-family: "Anonymous Pro", monospace;
        background-color: rgb(25, 25, 25);
    }

    .line {
        position: relative;
        top: 50%;
        width: 18.5em;
        margin: 0 auto;
        font-size: 180%;
        text-align: center;
    }

    a {
        text-decoration: none;
        font-weight: 900;
        color: #4F4F4F;
        transition: 0.2s;
    }

        a:hover {
            color: #C0C0C0;
        }

    i {
        font-size: 2rem;
        color: #4F4F4F;
        transition: 0.2s;
    }

        .fa-apple:hover {
            transform: scale(1.2);
            transition: 0.2s ease;
            color: #C0C0C0;
        }

    .fa-forward {
        cursor: context-menu;
    }

</style>
